export default function ProjectDetailPage() {
  const params = useParams();
  const slug = params?.title as string;
  const projectSlug = slug?.toLowerCase().replace(/%26|&/g, 'and').replace(/[^a-z0-9-]/g, '');

  const project = projectDetails[projectSlug];
  if (!project) {
    return <div className="min-h-screen flex items-center justify-center text-gray-300">Project not found.</div>;
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black py-20 px-6 flex flex-col items-center">
      <motion.div
        initial={{ opacity: 0, y: 40 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.7 }}
        className="bg-gray-900 bg-opacity-80 rounded-xl shadow-xl p-8 max-w-xl w-full"
      >
        <div className="flex justify-between w-full mb-2">
          <h2 className="text-2xl font-bold text-purple-300">{project.title}</h2>
          <span className="text-gray-400 font-semibold">{project.year}</span>
        </div>
        <div className="text-sm text-teal-300 mb-4 font-medium">{project.subtitle}</div>
        <ul className="list-disc pl-5 space-y-2 text-gray-200">
          {project.highlights?.map((point, i) => (
            <li key={i}>{point}</li>
          ))}
        </ul>
      </motion.div>
    </div>
  );
}
